<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">

</head>
<body>
    <h1 class="text-center">Welcome to the dashboard</h1>
    <% if (userDetails.length > 0) { %>
    <table class="table table-bordered table-striped table-hover">
        <tr>
            <td>S/N</td>
            <td>First Name</td>
            <td>Last Name</td>
            <td>Email</td>
            <td>Actions</td>
        </tr>
        <% for( let index = 0; index < userDetails.length; index++ ) { %>
            <tr>
                <td><%= index + 1 %></td>
                <td><%= userDetails[index].firstname %></td>
                <td><%= userDetails[index].lastname %></td>
                <td><%= userDetails[index].email %></td>
                <td class="d-flex g-2">
                    <form action="/delete" method="post">
                        <input type="hidden" name="userEmail" value="<%= userDetails[index].email %>">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>

                    <form action="/edit" method="post">
                        <input type="hidden" name="userEmail" value="<%= userDetails[index].email %>">
                        <button type="submit" class="btn btn-warning">Edit</button>
                    </form>
                </td>
            </tr>
        <% } %>
    </table>
    <% } else {%>
        <div class="text-center alert alert-dark">No users found</div>
    <%}%>
    <a href="/signup">Go to signup</a>
</body>
</html>